<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewPlaza"
        android:layout_width="83dp"
        android:layout_height="88dp"
        android:contentDescription="@string/plaza_image"
        android:padding="8dp"
        android:src="@drawable/ic_plaza" />

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="89dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewPlazaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plaza 1"
            android:layout_marginBottom="10dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewPlazaState"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Estado: Bueno"
            android:textAppearance="?attr/textAppearanceListItemSmall" />
    </LinearLayout>
</LinearLayout>
